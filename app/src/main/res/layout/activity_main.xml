<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sellpizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selling Pizza"
        android:textSize="120px"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#194C06"
        android:textStyle="bold"
        android:layout_marginTop="40px"
        android:layout_marginBottom="30px"
        />

    <TextView
        android:id="@+id/choosepizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose your Pizza"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_marginLeft="50px"
        android:layout_marginTop="50px"
        android:textColor="#B61818"
        />

    <CheckBox
        android:id="@+id/pizza1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="BBQ Pizza: 350 TK"
        android:textSize="55px"
        android:textStyle="italic"
        android:layout_marginTop="80px"
        />

    <LinearLayout
        android:id="@+id/buttonLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="55px"
            android:layout_marginLeft="80px"
            />

        <TextView
            android:id="@+id/pizzaCount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="55px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <Button
            android:id="@+id/minusButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="55px" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/pizza3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="Mac and Cheese: 365 TK"
        android:textSize="55px"
        android:textStyle="italic"
        />

    <LinearLayout
        android:id="@+id/buttonLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="55px"
            android:layout_marginLeft="80px"
            />

        <TextView
            android:id="@+id/pizzaCount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="55px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <Button
            android:id="@+id/minusButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="55px" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/pizza5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:text="Cheese Overloaded: 400 TK"
        android:textSize="55px"
        android:textStyle="italic"
        android:layout_marginBottom="0px"
        />

    <LinearLayout
        android:id="@+id/buttonLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plusButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="55px"
            android:layout_marginLeft="80px"
            />

        <TextView
            android:id="@+id/pizzaCount5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="55px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            />

        <Button
            android:id="@+id/minusButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="55px" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <TextView
            android:id="@+id/selectedPizzas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:textColor="#407009"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

    </HorizontalScrollView>

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Calculate"
        android:textColor="#FFFFFF"
        android:backgroundTint="#16730B"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_marginTop="0px"
        android:layout_margin="0px"
        />

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Total Price"
        android:inputType="numberDecimal"
        android:textSize="70px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:textColor="#EA2B2B"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#B38808"
        android:textSize="60px"
        android:layout_margin="30px"
        />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Clear"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E32424"
        android:textSize="60px"
        android:textStyle="bold"
        android:layout_margin="0px"
        />

</LinearLayout>
